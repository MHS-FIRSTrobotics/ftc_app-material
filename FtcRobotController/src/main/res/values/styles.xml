<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppTheme.Base" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <!--<item name="android:actionBarStyle">@style/AppTheme_ActionBar</item>-->
    </style>

    <style name="AppTheme_ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme_ActionBar_Title</item>
        <!--<item name="android:background">@color/primary_color</item>-->
    </style>

    <style name="AppTheme_ActionBar_Title" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
